{
  "background": {
    "persistent": true,
    "scripts": [
      "src/js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bcf-cart-saver@bullcityflavors.com",
      "strict_min_version": "55.0"
    }
  },
  "default_locale": "en",
  "description": "Save your Bull City Flavors cart",
  "homepage_url": "https://www.bullcityflavors.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2,
  "name": "BCF Cart Saver",
  "permissions": [
    "cookies",
    "https://www.bullcityflavors.com/*",
    "https://bullcityflavors.com/*"
  ],
  "version": "0.1.0"
}
